<html>
  <body>
    <h1>Books</h1>
    <% @books.each do |book| %>
      <p>Title</p>
      <span><%= link_to book.title, book_path(book.id) %></span>
      <p>Body</p>
      <span><%= link_to book.body, book_path(book.id) %></span>
    <% end %>

    <h2>New book</h2>
    <%= form_with model: Book.new do |f| %>
      <h4>title</h4>
      <%= f.text_field :title %>
    
      <h4>body</h4>
      <%= f.text_area :body %>
    
      <%= f.submit 'Create Book' %>
    
    <% end %>
  
    
  </body>
</html>